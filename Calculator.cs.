using System;
using System.Collections.Generic;

namespace CalculatorApp
{
    class Calculator
    {
        static void Main(string[] args)
        {
            Console.WriteLine("WELCOME TO CALCULATOR APP!");

            do
            {
                List<object> inputs = new List<object>();

                while (true)
                {
                    Console.Write("Enter the first number: ");
                    string input1 = Console.ReadLine().Trim();

                    Console.Write("Enter an operator (+, -, *, /): ");
                    string op = Console.ReadLine().Trim();

                    Console.Write("Enter the second number: ");
                    string input2 = Console.ReadLine().Trim();

                    Console.Write("Press '=' to calculate: ");
                    string equalsSign = Console.ReadLine().Trim();

                    if (equalsSign == "=")
                    {
                        if (double.TryParse(input1, out double num1) && double.TryParse(input2, out double num2))
                        {
                            inputs.Add(num1);
                            inputs.Add(op);
                            inputs.Add(num2);

                            double result = Calculate(inputs);
                            Console.WriteLine($"Result: {result}");
                            inputs.Clear(); // Clear inputs for the next calculation
                            break;
                        }
                        else
                        {
                            Console.WriteLine("Invalid input.");
                        }
                    }
                    else
                    {
                        Console.WriteLine("Invalid input. Press '=' to calculate.");
                    }
                }

                Console.Write("Do you want to perform another calculation? (yes/no): ");
                string anotherCalculation = Console.ReadLine().Trim().ToLower();

                if (anotherCalculation != "yes")
                    break;

                Console.WriteLine();

            } while (true);

            Console.WriteLine("End of Program.");
            Console.ReadKey();
        }

        static double Calculate(List<object> inputs)
        {
            double result = (double)inputs[0];
            for (int i = 1; i < inputs.Count; i += 2)
            {
                string op = (string)inputs[i];
                double num2 = (double)inputs[i + 1];

                switch (op)
                {
                    case "+":
                        result += num2;
                        break;
                    case "-":
                        result -= num2;
                        break;
                    case "*":
                        result *= num2;
                        break;
                    case "/":
                        if (num2 != 0)
                        {
                            result /= num2;
                        }
                        else
                        {
                            Console.WriteLine("Cannot divide by zero!");
                            return double.NaN;
                        }
                        break;
                    default:
                        Console.WriteLine("Invalid operator.");
                        return double.NaN;
                }
            }

            return result;
        }
    }
}
