CC #1

using System;

class Program
{
    static void Main(string[] args)
    {
        // Prompt the user to input two integers
        Console.WriteLine("Please enter the first integer:"); // Prompt the user to enter the first integer
        int int1 = Convert.ToInt32(Console.ReadLine()); // Read the input from the user as a string and convert it to an integer

        Console.WriteLine("Please enter the second integer:"); // Prompt the user to enter the second integer
        int int2 = Convert.ToInt32(Console.ReadLine()); // Read the input from the user as a string and convert it to an integer

        // Prompt the user to input two doubles
        Console.WriteLine("Please enter the first double:"); // Prompt the user to enter the first double
        double double1 = Convert.ToDouble(Console.ReadLine()); // Read the input from the user as a string and convert it to a double

        Console.WriteLine("Please enter the second double:"); // Prompt the user to enter the second double
        double double2 = Convert.ToDouble(Console.ReadLine()); // Read the input from the user as a string and convert it to a double

        // Compute the sum of the two integers
        int intSum = Sum(int1, int2); // Call the Sum method to compute the sum of the two integers

        // Compute the sum of the two doubles
        double doubleSum = Sum(double1, double2); // Call the Sum method to compute the sum of the two doubles

        // Print the sums
        Console.WriteLine("The sum of the two integers is: " + intSum); // Display the sum of the integers
        Console.WriteLine("The sum of the two doubles is: " + doubleSum); // Display the sum of the doubles

        // Compute the product of the sums
        double product = intSum * doubleSum; // Calculate the product of the sums

        // Print the product
        Console.WriteLine("The product of the sums is: " + product); // Display the product of the sums
    }

    // Method to compute the sum of two integers
    static int Sum(int a, int b)
    {
        return a + b; // Return the sum of the two integers
    }

    // Method to compute the sum of two doubles
    static double Sum(double a, double b)
    {
        return a + b; // Return the sum of the two doubles
    }
}


CC #2

using System;

class Program
{
    static void Main(string[] args)
    {
        // Prompt the user to input a string
        Console.WriteLine("Please enter a string:"); // Prompt the user to input a string
        string input = Console.ReadLine(); // Store the user's input in a variable

        // Count the number of words in the string
        int wordCount = CountWords(input); // Call the CountWords method to count the number of words in the input string

        // Print the number of words
        Console.WriteLine("Number of words in the string: " + wordCount); // Display the number of words in the string to the user

        // Convert the string to uppercase
        string uppercaseString = input.ToUpper(); // Convert the input string to uppercase

        // Print the string in uppercase
        Console.WriteLine("Uppercase string: " + uppercaseString); // Display the uppercase string to the user
    }

    // Method to count the number of words in a string
    static int CountWords(string str)
    {
        // Split the string into words based on whitespace characters
        string[] words = str.Split(new char[] { ' ', '\t', '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries);
        
        // Return the number of words in the string
        return words.Length; // Return the length of the array, which represents the number of words
    }
}


CC #3

using System;

class Program
{
    static void Main(string[] args)
    {
        bool continueProgram = true; // Flag to control whether to continue the program or not

        // Loop until the user chooses to stop
        while (continueProgram)
        {
            // Prompt the user to select an arithmetic operation
            Console.WriteLine("Select an arithmetic operation:");
            Console.WriteLine("1. Addition (+)");
            Console.WriteLine("2. Subtraction (-)");
            Console.WriteLine("3. Multiplication (*)");
            Console.WriteLine("4. Division (/)");

            // Read the user's choice for arithmetic operation
            Console.Write("Enter your choice (1-4): ");
            int choice = Convert.ToInt32(Console.ReadLine());

            // Perform the selected arithmetic operation based on the user's choice
            switch (choice)
            {
                case 1: // Addition
                    PerformAddition();
                    break;
                case 2: // Subtraction
                    PerformSubtraction();
                    break;
                case 3: // Multiplication
                    PerformMultiplication();
                    break;
                case 4: // Division
                    PerformDivision();
                    break;
                default:
                    Console.WriteLine("Invalid choice. Please enter a number between 1 and 4.");
                    break;
            }

            // Ask the user if they want to perform another action or exit the program
            Console.Write("Do you want to perform another action? (yes/no): ");
            string response = Console.ReadLine();

            // Check the user's response to decide whether to continue the program or exit
            if (response.ToLower() != "yes")
            {
                continueProgram = false; // Set the flag to false to exit the loop
            }
        }
    }

    // Method to perform addition of two numbers
    static void PerformAddition()
    {
        // Prompt the user to enter two numbers to add
        Console.Write("Enter the first number: ");
        double num1 = Convert.ToDouble(Console.ReadLine());

        Console.Write("Enter the second number: ");
        double num2 = Convert.ToDouble(Console.ReadLine());

        // Calculate the sum of the two numbers and print the result
        double result = num1 + num2;
        Console.WriteLine("Result: " + result);
    }

    // Method to perform subtraction of two numbers
    static void PerformSubtraction()
    {
        // Prompt the user to enter two numbers to subtract
        Console.Write("Enter the first number: ");
        double num1 = Convert.ToDouble(Console.ReadLine());

        Console.Write("Enter the second number: ");
        double num2 = Convert.ToDouble(Console.ReadLine());

        // Calculate the difference of the two numbers and print the result
        double result = num1 - num2;
        Console.WriteLine("Result: " + result);
    }

    // Method to perform multiplication of two numbers
    static void PerformMultiplication()
    {
        // Prompt the user to enter two numbers to multiply
        Console.Write("Enter the first number: ");
        double num1 = Convert.ToDouble(Console.ReadLine());

        Console.Write("Enter the second number: ");
        double num2 = Convert.ToDouble(Console.ReadLine());

        // Calculate the product of the two numbers and print the result
        double result = num1 * num2;
        Console.WriteLine("Result: " + result);
    }

    // Method to perform division of two numbers
    static void PerformDivision()
    {
        // Prompt the user to enter two numbers to divide
        Console.Write("Enter the first number: ");
        double num1 = Convert.ToDouble(Console.ReadLine());

        Console.Write("Enter the second number: ");
        double num2 = Convert.ToDouble(Console.ReadLine());

        // Check if the divisor is not zero, then calculate the quotient and print the result
        if (num2 != 0)
        {
            double result = num1 / num2;
            Console.WriteLine("Result: " + result);
        }
        else
        {
            // Inform the user about division by zero error
            Console.WriteLine("Error: Division by zero is not allowed.");
        }
    }
}


