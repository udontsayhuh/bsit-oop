#4
// Write a C# program that takes two numbers as input: the first number will be the number to be multiplied and the second number will be the multiplier, and prints its multiplication table up to the given second number (the multiplier).
using System;

class Program
{
    static void Main(string[] args)
    {
        // Prompt the user to enter the number to be multiplied
        Console.WriteLine("====================================================");
        Console.Write("Enter the number to be multiplied: ");
        int number;
        // Validate user input for the number to be multiplied
        while (!int.TryParse(Console.ReadLine(), out number))
        {
            Console.WriteLine("Invalid input. Please enter a valid number.");
        }

        // Prompt the user to enter the multiplier
        Console.Write("Enter the multiplier: ");
        int multiplier;
        // Validate user input for the multiplier
        while (!int.TryParse(Console.ReadLine(), out multiplier))
        {
            Console.WriteLine("Invalid input. Please enter a valid number.");
        }

        // Display the multiplication table header
        Console.WriteLine("====================================================");
        Console.WriteLine($"        MULTIPLICATION TABLE FOR {number} UP TO {multiplier}:");

        // Generate and display the multiplication table
        for (int i = 1; i <= multiplier; i++)
        {
            int result = number * i;
            Console.WriteLine($"{number} x {i} = {result}");
            Console.WriteLine("====================================================");
        }
    }
}

