#3
// Write a C# program that can perform basic arithmetic functions. (Addition, Subtraction, Multiplication, and Division). The user must be allowed to select which arithmetic functionhe/she wants to use, and then they will 
be prompted to enter only two numbers after selecting the arithmetic function. Print the result afterwards, and then after printing ask the user if he/she wants toperform another action or not. If yes, repeat the program, if not terminate the program.

using System;

class Program
{
    static void Main(string[] args)
    {
        // Variable to control program flow
        bool continueProgram = true;

        // Main loop to allow multiple calculations
        while (continueProgram)
        {
            // Display header
            Console.WriteLine("=============================================");
            Console.WriteLine("       PERFORM BASIC ARITHMETIC FUNCTIONS!    ");
            Console.WriteLine("=============================================");

            // Display menu for arithmetic operations
            Console.WriteLine("Select an arithmetic operation:");
            Console.WriteLine("A. Addition (+)");
            Console.WriteLine("B. Subtraction (-)");
            Console.WriteLine("C. Multiplication (*)");
            Console.WriteLine("D. Division (/)");
            Console.WriteLine("=============================================");
            Console.Write("Enter your choice (A-D):  ");
            
            // Read user's choice for operation
            string choiceStr = Console.ReadLine().ToUpper();
            char choice = choiceStr.Length > 0 ? choiceStr[0] : ' ';

            double result = 0;

            // Perform the selected operation
            switch (choice)
            {
                case 'A': // Addition
                    result = PerformOperation('+');
                    break;
                case 'B': // Subtraction
                    result = PerformOperation('-');
                    break;
                case 'C': // Multiplication
                    result = PerformOperation('*');
                    break;
                case 'D': // Division
                    result = PerformOperation('/');
                    break;
                default:
                    Console.WriteLine("Invalid choice. Please enter a valid option (A-D).");
                    continue;
            }

            // Display the result
            Console.WriteLine("=============================================");
            Console.WriteLine($"RESULT: {result}");
            Console.WriteLine("=============================================");

            // Ask if user wants to continue
            Console.Write("Do you want to perform another calculation? (yes/no): ");
            string response = Console.ReadLine().ToLower();
            if (response != "yes")
            {
                continueProgram = false;
            }
        }
    }

    // Method to perform the arithmetic operation
    static double PerformOperation(char operation)
    {
        // Prompt user to enter numbers
        Console.WriteLine("=============================================");
        Console.Write("Enter the first number: ");
        double num1;
        while (!double.TryParse(Console.ReadLine(), out num1))
        {
            Console.WriteLine("Invalid input for number. Please enter a valid number.");
        }

        Console.Write("Enter the second number: ");
        double num2;
        while (!double.TryParse(Console.ReadLine(), out num2))
        {
            Console.WriteLine("Invalid input for number. Please enter a valid number.");
        }

        double result = 0;

        // Perform the selected arithmetic operation
        switch (operation)
        {
            case '+':
                result = num1 + num2;
                break;
            case '-':
                result = num1 - num2;
                break;
            case '*':
                result = num1 * num2;
                break;
            case '/':
                if (num2 == 0)
                {
                    Console.WriteLine("Cannot divide by zero.");
                    result = double.NaN;
                }
                else
                {
                    result = num1 / num2;
                }
                break;
        }

        return result;
    }
}

