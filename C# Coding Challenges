#5
Write a C# program that demonstrates a list that contains 5 cars and display a sorted listed after. (Using ArrayList are LinkedList is allowed).

using System;
using System.Collections.Generic;

class Program
{
    static void Main(string[] args)
    {
        // Create a list to store cars
        List<string> cars = new List<string>();

        // Prompt the user to enter 5 different car names
        Console.WriteLine("====================================================");
        Console.WriteLine("             ENTER 5 DIFFERENT CAR                  ");
        Console.WriteLine("====================================================");
        for (int i = 0; i < 5; i++)
        {
            // Prompt user to enter each car name
            Console.Write($"Car {i + 1}: ");
            string carName = Console.ReadLine();
            cars.Add(carName); // Add the car name to the list
        }

        // Display the unsorted list of cars
        Console.WriteLine("====================================================");
        Console.WriteLine("List of cars (unsorted):");
        DisplayList(cars);
        Console.WriteLine("====================================================");
        // Sort the list of cars
        cars.Sort();

        // Display the sorted list of cars
        Console.WriteLine("List of cars (sorted):");
        DisplayList(cars);
        Console.WriteLine("====================================================");
    }

    // Method to display the elements of a list
    static void DisplayList(List<string> list)
    {
        foreach (var item in list)
        {
            Console.WriteLine(item);
        }
    }
}
